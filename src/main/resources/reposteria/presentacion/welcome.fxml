                    </font>
                    <graphic>
                        <ImageView fitHeight="48" fitWidth="48" nodeOrientation="INHERIT">
                            <image>
                                <Image url="@/reposteria/icons/cliente.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Pedidos -->
                <Button fx:id="btnPedidos" alignment="BOTTOM_CENTER" contentDisplay="TOP" onAction="#switchToPedidos" prefHeight="120" prefWidth="200" style="-fx-background-color: #FFE9E3;" text="Pedidos" textAlignment="CENTER" GridPane.columnIndex="1">
                    <font>
                        <Font name="Segoe Fluent Icons" size="22.0" />
